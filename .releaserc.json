{
  "branches": ["main", "master"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    "@semantic-release/npm",
    "@semantic-release/git",
    "@semantic-release/github"
  ],
  "preset": "angular",
  "releaseRules": [
    {
      "type": "contract",
      "release": "major"
    },
    {
      "type": "feat",
      "release": "minor"
    },
    {
      "type": "doc",
      "release": "patch"
    },
    {
      "type": "ci",
      "release": "minor"
    },
    {
      "type": "bug",
      "release": "patch"
    },
    {
      "type": "test",
      "release": "patch"
    },
    {
      "type": "data",
      "release": "minor"
    },
    {
      "type": "tf",
      "release": "patch"
    },
    {
      "type": "mod",
      "release": "minor"
    },
    {
      "type": "lib",
      "release": "minor"
    }
  ],
  "parserOpts": {
    "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
  },
  "writerOpts": {
    "groupBy": "type",
    "commitGroupsSort": "title",
    "commitsSort": "header"
  }
}
